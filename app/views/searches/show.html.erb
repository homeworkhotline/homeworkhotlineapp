<% if @search.model == "MnpsReport" %>
<%= link_to "Back", root_path %>
<% @results.each do |result| %>
	<% result.mnps_reports.each do |report| %>
	<% @user = report.user %>
    <% @user.mnps_reports.each do |lilreport| %>
    <% end %>
    <% @timeclocks = report.time_clocks %>
