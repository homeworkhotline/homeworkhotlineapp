<% content_for :page, "New Student Registration" %>
<% content_for :title, "New Student Registration" %>
<%= form_for(@student) do |f| %>
<h2>STUDENT INFORMATION</h2>
<div class="field">
<h3 class="numbertext">Grade</h3>
<%= f.number_field :grade, class: "number", required: true, min: 0, max: 13%>
</div>
<div class="field">
<h3>Home Language</h3>
<%= f.select :homelang, options_for_select(["English", "Acholi", "Amarhic", "Arabic", "Bengali", "Burmese", "Cambodian", "Cantonese", "Chinese","Creole", "Dutch", "Ethiopian", "Farsi", "French", "Gujarati", "Harari", "Haitian", "Ibibio", "Igbo", "Jola","Janapanese", "Karen", "Korean", "Krundi", "Kurdish", "Laotian", "Myanmar", "Nepali", "Nuer", "Romanian", "Somalian", "Spanish", "Swahili", "Tamil", "Tigrinya", "Turkmani", "Urdu", "Vietnamese", "Wolof", "Zomi", "Teluga", "German"]), required: true %>
</div>
<div class="field">
<h3>Internet?</h3>
<%= f.check_box :internet, class: "checkbox"%>
</div>
<div class="field">
<h3>School</h3>
<%= f.select :school_id, options_for_select(@schools.order(:name).collect { | school | ["#{school.name}" , school.id]}), {prompt: "School..."}, required: true%>
</div>
<div class="field">
<h3>Referred By</h3>
<%= f.text_field :reffered_by%>
</div>
<div style="clear: both;"></div>
<%= f.submit "Continue", class: "button" %>
<% end %>
