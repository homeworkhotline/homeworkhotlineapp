    .arrow{
    height:40px;
    color:#000;
    position:absolute;
    width:160px;
    font-weight: 400;
    font-size: 18px !important;
    letter-spacing: 1px !important;
    text-align:center;
    line-height:40px;
    background:#f2f2f2;
    margin-left: 25px; 
}
.arrow:after{
    content:"";
    position: absolute;
    left: 100%;
    top:0px;
    width:0px;
    height:0px;
    border-top:20px solid transparent;
    border-left:15px solid #f2f2f2;
    border-bottom:20px solid transparent;
}
.right {
  margin-left:30px;
  z-index: -10;
  background-color:white;
  transition: all 150ms ease-in-out;
}
.right:after {
  border-left-color: white;
}
.arrow:hover ~ .right  {
  margin-left: 40px;
}
.arrow:hover ~ .righter  {
  margin-left: 45px;
}
.righter {
  margin-left:35px;
  z-index: -11;
  background-color:#65ef96;
  transition: all 150ms ease-in-out;
}
.righter:hover {
  left: 50px;
}
.righter:after {
  border-left-color: #65ef96
}
