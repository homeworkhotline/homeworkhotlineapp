<% content_for :title, "Sign In" %>
<%= image_tag "hhcircle.png", class: "image" %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="parent">
  <div class="field">
    <%= f.text_field :username, autofocus: true, placeholder: "Username", class: "input user" %>
  </div>
  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "input pass" %>
  </div>

  <div class="actions">
    <%= link_to new_user_registration_path do %>
      <div class="signup">SIGN UP</div>
    <% end %>
    <%= f.submit "SIGN IN", class: "button" %>
  </div>
  </div>
<% end %>
