<%= image_tag "hhcircle.png", class: "image" %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="parent">
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "input" %>
  </div>
  <div class="field">
    <%= f.text_field :username, autocomplete: "off", placeholder: "Username", class: "input" %>
  </div>
  <div class="field">
    <%= f.text_field :firstname, autocomplete: "off", placeholder: "First Name", class: "input" %>
  </div>
  <div class="field">
    <%= f.text_field :lastname, autocomplete: "off", placeholder: "Last Name", class: "input" %>
  </div>
  <div class="field">
    <%= f.text_field :token, autocomplete: "off", placeholder: "Token", class: "input" %>
  </div>
    <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "input" %>
  </div>
    <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "input" %>
  </div>
  <div class="actions">
    <%= f.submit "SIGN UP", class: "button" %>
  </div>
  </div>
<% end %>
<style type="text/css">
  .image {
    width: 120px;
    margin-left: -60px;
    left: 50%;
    position:relative;
    top: 7px;
  }
  .bg {
    width: 450px;
    margin-left: -225px;
    left: 50%;
    position: absolute;
    top: 30px;
    z-index: -10;
  }
  .input {
    border: none;
    background-color:#f2f2f2;
    color:#333;
    width: 279px;
    height: 45px;
    border-left: #f2f2f2 solid 3px;
    border-right: #f2f2f2 solid 3px;
    font-size: 22px;
    font-family: Lato;
    font-weight: 300;
    padding-left: 12px;
    margin-bottom: 10px;
    letter-spacing: .5px;
    transition: all 220ms ease-in-out
  }
  .parent {
    width: 300px;
    margin-left: -150px;
    left: 50%;
    position: relative;
    top: 30px;
  }
  .button {
  margin-top: 25px;
  width: 300px;
  text-align: center;
  font-size: 20px;
  font-family: Lato;
  font-weight: 400;
  padding: 10px 0;
  letter-spacing: 4px;
  color: #fff;
  background-color: #65ef96;
  text-shadow: none;
  text-transform: uppercase;
  border: none;
  cursor: pointer;
  position: relative;
  float: center;
  transition: all 150ms ease-in-out
  }
  .button:hover{ 
    background-color:#5CDA89;

  }
  ::-webkit-input-placeholder {
    color: #ccc;
    opacity: 1 !important;
}
textarea:focus, input:focus{
    outline: none;
    border-left: #45ef96 solid 5px;
    padding-left: 10px;
}

</style>
