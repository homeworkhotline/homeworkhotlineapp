<script type="text/javascript">
$(document).ready(function(){
$('.hide').hide();
$('#textbool').change(function(){
if (document.getElementById('textbool').checked){
  $('.hide').slideDown(200);
}else{$('.hide').slideUp(200);}
});
  $('.start').on("change", function(){
    var start = $(this).val();
    if(start == -5){
      $('.beginning').text('-5');
    }else if(start == -4){
      $('.beginning').text('-4');
    }else if(start == -3){
      $('.beginning').text('-3');
    }else if(start == -2){
      $('.beginning').text('-2');
    }else if(start == -1){
      $('.beginning').text('-1');
    }else if(start == 0){
      $('.beginning').text('0');
    }
  });
  $('.end').on("change", function(){
    var end = $(this).val();
    if(end == 0){
      $('.ending').text('0');
      $('.postcheck').attr("checked", false);
    }else if(end == 1){
      $('.ending').text('1');
      $('.postcheck').attr("checked", false);
    }else if(end == 2){
      $('.ending').text('2');
      $('.postcheck').attr("checked", true);
    }
  });
});
</script>