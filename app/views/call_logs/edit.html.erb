<script type="text/javascript">
$(document).ready(function(){
$('.hide').hide();
$('#textbool').change(function(){
if (document.getElementById('textbool').checked){
  $('.hide').slideDown(200);
}else{$('.hide').slideUp(200);}
});
  $('.start').on("change", function(){
    var start = $(this).val();
    if(start == -5){
      $('.beginning').text('Obvious learning disabilities/special needs.');
    }else if(start == -4){
      $('.beginning').text('Behind grade level OR gets help in language other than english.');
    }else if(start == -3){
      $('.beginning').text('Deos not understand concept.');
    }else if(start == -2){
      $('.beginning').text('Many questions but partially understands the concept.');
    }else if(start == -1){
      $('.beginning').text('One or two questions but understands basic concept.');
    }else if(start == 0){
      $('.beginning').text('Homework check with no problems.');
    }
  });
  $('.end').on("change", function(){
    var end = $(this).val();
    if(end == 0){
      $('.ending').text('No progress.');
      $('.postcheck').attr("checked", false);
    }else if(end == 1){
      $('.ending').text('Completed assignment, did not master material.');
      $('.postcheck').attr("checked", false);
    }else if(end == 2){
      $('.ending').text('Mastered material and passed post test.');
      $('.postcheck').attr("checked", true);
    }
  });
});
</script>