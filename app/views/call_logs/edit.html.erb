<% content_for :page, "Call Log" %>
<%= form_for(@call_log) do |f| %>
  <div class="calldetails">
  <h2>CALL DETAILS</h2>
  <div class="field">
  <h3>Times dialed</h3>
    <%= f.number_field :timesdialed %>
  </div>

  <div class="field">
  <h3>Language spoken</h3>
    <%= f.text_field :lang %>
  </div>

  <div class="field">
  <h3>Parent participation</h3>
    <%= f.check_box :parent %>
  </div>
  </div>
<div class="material">
<h2>MATERIAL COVERED</h2>
  <div class="field">
    <h3>Subject</h3><%= f.text_field :skill %>
  </div>

  <div class="field checks">
  <h3>Materials</h3>
    <h4 style="width: 263px !important;">Textbook</h4>
    <%= f.check_box :textbool, id: "textbool" %>
  </div>

  <div class="field checks">
    <h4>Worksheet</h4>
    <%= f.check_box :worksheet %>
  </div>

  <div class="field checks">
    <h4>Stoodle</h4>
    <%= f.check_box :stoodle %>
  </div>

  <div class="field checks">
    <h4>Image Share</h4>
    <%= f.check_box :image_share %>
  </div>

  <div class="field hide">
    <h3>Textbook</h3>
    <%= f.text_field :textbook %>
  </div>

  <div class="field hide">
    <h4>Page</h4>
    <%= f.number_field :page %>
  </div>

  <div class="field" style="margin-top: 30px; margin-bottom: 30px;">
  <h3>Skill assessed</h3>
    <%= f.text_area :notes %>
  </div>
</div>
<div class="session">
<h2>SESSION EVALUATION</h2>
<h3>Understanding at the start of session:</h3>
  <div class="field">
    <%= f.range_field :startknow, :min=>-5, :max=>0, class: "start", value: 0 %>
</div>
<h4 class="understand beginning">Basic knowledge of subject.</h4>
<h3>Understanding at the end of session:</h3>
  <div class="field">
    <%= f.range_field :endknow, :min=>0, :max=>2, class: "end", value: 0 %>
  </div>
  <h4 class="understand ending" style="margin-bottom: 10px;">Did not complete call</h4>
  <div class="post">
  <h4 class="understand" style="display: inline-block;">Post-test given.</h4>
    <%= f.check_box :posttest, style: "display:inline-block", class: "postcheck" %>
  </div>
</div>
  <div class="actions">
    <%= f.submit "FINISH CALL", class: "button"%>
  </div>
<% end %>
