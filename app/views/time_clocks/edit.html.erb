<%= content_for :page, "Editing Timesheet" %>
<%= content_for :title, "Edit Timesheet" %>
<div class="container">
<div class="buttonright">
<div class="buttonparent">
<%= link_to destroy_user_session_path, method: :delete do %>
<div class="button">LOG OUT</div>
<% end %>
<%= link_to new_call_log_path do %>
<div class="parent">
<div class="arrow">TAKE A CALL</div>
<div class="right arrow"></div>
<div class="righter arrow"></div>
</div>
</div>
</div>
<% end %>
<% if current_user.administrator? || current_user.specialist? %>
<div class="adminbar">
    <%= link_to "TIMESHEET", root_path %>
    <%= link_to "EMPLOYEES", employees_path, :class => "active" %>
    <%= link_to "SEARCH", new_search_path %>
    <%= link_to "ANALYTICS", statistics_path %>
  </div>
  </div>
  <% end %>
<div class="container">
	<div class="bar">
	<span class="icon-alert"></span> Editing: <%= @time_clock.date.strftime('%B %d, %Y') %>
	</div>
</div>
<%= form_for(@time_clock) do |f| %>
	<div class="timetext">
	CLOCK IN
	</div>
	<div class="timeclock">
	<%= f.select :clockinhour, options_for_select(('01'..'12').to_a, @time_clock.clock_in ? @time_clock.clock_in.strftime('%l').to_i : nil)%><span class="colon">:</span><%= f.select :clockinmin, options_for_select(('00'..'60').to_a, @time_clock.clock_in ? @time_clock.clock_in.strftime('%M').to_i : nil) %><%= f.select :clockinmeridiem, options_for_select(['AM', 'PM'], @time_clock.clock_in ? @time_clock.clock_in.strftime('%p') : nil) %>
	</div>
	<div class="timetext">
	CLOCK OUT
	</div>
	<div class="timeclock">
	<%= f.select :clockouthour, options_for_select(('01'..'12').to_a, @time_clock.clock_in ? @time_clock.clock_in.strftime('%l').to_i : nil)%><span class="colon">:</span><%= f.select :clockoutmin, options_for_select(('00'..'60').to_a, @time_clock.clock_in ? @time_clock.clock_in.strftime('%M').to_i : nil) %><%= f.select :clockoutmeridiem, options_for_select(['AM', 'PM'], @time_clock.clock_in ? @time_clock.clock_in.strftime('%p') : nil) %>
	</div>
	<div class="container">
	<%= f.submit "SUBMIT", class: "submit" %>
	</div>
<% end %>
